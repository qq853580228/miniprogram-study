/* pages/detail/detail.wxss */
.detailComtailer {
  display: flex;
  flex-direction: column;
}
.headImg {
  width: 100%;
  height: 460rpx;
}
.avatar-date {
  padding: 10rpx;
}
.avatar-date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.avatar-date text {
  margin-left: 10rpx;
  font-size: 28rpx;
}
.company {
  padding: 10rpx;
}
.company text {
  font-size: 36rpx;
  font-weight: bold;
}
.collection-share-container {
  position: relative;
  padding-bottom: 10rpx;
}
.line {
  position: absolute;
  top: 45rpx;
  left: 5%;
  width: 90%;
  height: 1rpx;
  background-color: #eee;
  z-index: -1;
}
.collection-share {
  float: right;
  padding-right: 50rpx;
}
.collection-share image {
  margin-right: 20rpx;
  width: 90rpx;
  height: 90rpx;
}
.btn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.content {
  padding-top: 10rpx;
  text-indent: 2em;
}
.music {
  position: relative;
  top:50%;
  left: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}
.musicImg {
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
  width: 60rpx;
  height: 60rpx;
}